@page
@model Medical.Client.Models.Patients.MyPatientsModel
@{
    ViewData["Title"] = "My Patients";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-users me-2"></i>My Patients</h2>
    </div>

    @if (Model.ErrorMessage != null)
    {
        <div class="alert alert-danger" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@Model.ErrorMessage
        </div>
    }

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Upcoming Appointments</h5>
                </div>
                <div class="card-body">
                    <div class="list-group">
                        @foreach (var patient in Model.UpcomingPatients)
                        {
                            <div class="list-group-item">
                                <h6 class="mb-1">@patient.FullName</h6>
                                <p class="mb-1 text-muted">
                                    <i class="fas fa-calendar me-2"></i>Next Visit: @patient.NextAppointment?.ToString("g")
                                </p>
                                <div class="d-flex justify-content-between">
                                    <a asp-page="./Details" asp-route-id="@patient.Id" class="btn btn-sm btn-primary">
                                        <i class="fas fa-info-circle me-1"></i>Details
                                    </a>
                                    <a asp-page="/MedicalRecords/History" asp-route-patientId="@patient.Id" 
                                       class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-file-medical me-1"></i>Medical History
                                    </a>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Past Patients</h5>
                </div>
                <div class="card-body">
                    <div class="list-group">
                        @foreach (var patient in Model.PastPatients)
                        {
                            <div class="list-group-item">
                                <h6 class="mb-1">@patient.FullName</h6>
                                <p class="mb-1 text-muted">
                                    <i class="fas fa-calendar me-2"></i>Last Visit: @patient.LastAppointment?.ToString("g")
                                </p>
                                <div class="d-flex justify-content-between">
                                    <a asp-page="./Details" asp-route-id="@patient.Id" class="btn btn-sm btn-primary">
                                        <i class="fas fa-info-circle me-1"></i>Details
                                    </a>
                                    <a asp-page="/MedicalRecords/History" asp-route-patientId="@patient.Id" 
                                       class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-file-medical me-1"></i>Medical History
                                    </a>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>