@page
@model Medical.Client.Models.Patients.MyPatientsModel
@{
    ViewData["Title"] = "My Patients";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-users me-2"></i>My Patients</h2>
    </div>

    @if (Model.ErrorMessage != null)
    {
        <div class="alert alert-danger" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@Model.ErrorMessage
        </div>
    }

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var patient in Model.Patients)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@patient.FullName</h5>
                        <p class="card-text">
                            <small class="text-muted">
                                <i class="fas fa-phone me-2"></i>@patient.Phone
                            </small>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <i class="fas fa-calendar me-2"></i>@patient.DateOfBirth.ToDateTime().ToString("d")
                            </small>
                        </p>
                        <div class="d-flex justify-content-between">
                            <a asp-page="./Details" asp-route-id="@patient.Id" class="btn btn-primary">
                                <i class="fas fa-info-circle me-1"></i>Details
                            </a>
                            <a asp-page="/MedicalRecords/History" asp-route-patientId="@patient.Id" class="btn btn-outline-primary">
                                <i class="fas fa-file-medical me-1"></i>Medical History
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>