@page "{id}"
@model Medical.Client.Models.Patients.DetailsModel
@{
    ViewData["Title"] = "Patient Details";
}

<div class="container">
    @if (Model.ErrorMessage != null)
    {
        <div class="alert alert-danger">@Model.ErrorMessage</div>
    }

    @if (Model.Patient != null)
    {
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h3 class="mb-0">Patient Information</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h4>Personal Information</h4>
                        <dl class="row">
                            <dt class="col-sm-4">Full Name</dt>
                            <dd class="col-sm-8">@Model.Patient.FullName</dd>

                            <dt class="col-sm-4">Date of Birth</dt>
                            <dd class="col-sm-8">@Model.Patient.DateOfBirth.ToDateTime().ToString("d")</dd>

                            <dt class="col-sm-4">Gender</dt>
                            <dd class="col-sm-8">@Model.Patient.Gender</dd>

                            <dt class="col-sm-4">Phone</dt>
                            <dd class="col-sm-8">@Model.Patient.Phone</dd>

                            <dt class="col-sm-4">Address</dt>
                            <dd class="col-sm-8">@Model.Patient.Address</dd>
                        </dl>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <a asp-page="/MedicalRecords/History" asp-route-patientId="@Model.Patient.Id" class="btn btn-primary">
                    <i class="fas fa-file-medical me-1"></i>View Medical History
                </a>
                <a asp-page="./MyPatients" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-1"></i>Back to List
                </a>
            </div>
        </div>
    }
</div>