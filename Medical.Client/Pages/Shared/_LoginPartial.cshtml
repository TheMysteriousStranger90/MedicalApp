@using Medical.Client.Interfaces
@using Microsoft.AspNetCore.Mvc.TagHelpers
@inject ITokenStorageService TokenService

@{
    var token = TokenService.GetToken();
    var isAuthenticated = !string.IsNullOrEmpty(token);
}

@if (isAuthenticated)
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" asp-page="/Doctors/Index">
                <i class="fas fa-user-md me-1"></i> Doctors
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-page="/Account/Profile">
                <i class="fas fa-user me-1"></i> Profile
            </a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-page="/Account/Logout" method="post">
                <button type="submit" class="nav-link btn btn-link">
                    <i class="fas fa-sign-out-alt me-1"></i> Logout
                </button>
            </form>
        </li>
    </ul>
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" asp-page="/Account/Login">
                <i class="fas fa-sign-in-alt me-1"></i> Login
            </a>
        </li>
    </ul>
}

