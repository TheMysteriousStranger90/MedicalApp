@page
@model Medical.Client.Models.Appointments.MyAppointmentsModel
@{
    ViewData["Title"] = "My Appointments";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-calendar-check me-2"></i>My Appointments</h2>
        <a asp-page="/Doctors/Index" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Book New Appointment
        </a>
    </div>

    @if (Model.ErrorMessage != null)
    {
        <div class="alert alert-danger">@Model.ErrorMessage</div>
    }

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Upcoming Appointments</h5>
                </div>
                <div class="card-body">
                    @{
                        var upcomingAppointments = Model.Appointments
                            .Where(a => a.AppointmentDate.ToDateTime() > DateTime.Now && 
                                   a.Status == AppointmentStatus.Scheduled);
                    }
                    @if (!upcomingAppointments.Any())
                    {
                        <p class="text-muted">No upcoming appointments</p>
                    }
                    else
                    {
                        @foreach (var appointment in upcomingAppointments)
                        {
                            <div class="appointment-card mb-3">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6>@appointment.AppointmentDate.ToDateTime().ToString("dddd, MMM d, yyyy")</h6>
                                        <p class="text-muted mb-0">@appointment.AppointmentDate.ToDateTime().ToString("h:mm tt")</p>
                                    </div>
                                    <div>
                                        <form method="post" asp-page-handler="Cancel" asp-route-id="@appointment.Id" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to cancel this appointment?')">
                                                <i class="fas fa-times"></i> Cancel
                                            </button>
                                        </form>
                                        <a asp-page="./Details" asp-route-id="@appointment.Id" class="btn btn-sm btn-info">
                                            <i class="fas fa-info-circle"></i> Details
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Past Appointments</h5>
                </div>
                <div class="card-body">
                    @{
                        var pastAppointments = Model.Appointments
                            .Where(a => a.AppointmentDate.ToDateTime() <= DateTime.Now || 
                                   a.Status != AppointmentStatus.Scheduled);
                    }
                    @if (!pastAppointments.Any())
                    {
                        <p class="text-muted">No past appointments</p>
                    }
                    else
                    {
                        @foreach (var appointment in pastAppointments)
                        {
                            <div class="appointment-card mb-3">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6>@appointment.AppointmentDate.ToDateTime().ToString("MMM d, yyyy")</h6>
                                        <span class="badge bg-@(appointment.Status switch {
                                            AppointmentStatus.Completed => "success",
                                            AppointmentStatus.Cancelled => "danger",
                                            _ => "secondary"
                                        })">
                                            @appointment.Status
                                        </span>
                                    </div>
                                    <a asp-page="./Details" asp-route-id="@appointment.Id" class="btn btn-sm btn-info">
                                        <i class="fas fa-info-circle"></i> Details
                                    </a>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .appointment-card {
        padding: 1rem;
        border: 1px solid #dee2e6;
        border-radius: 0.25rem;
        background-color: #fff;
    }
</style>