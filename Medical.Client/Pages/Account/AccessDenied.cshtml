@page
@model Medical.Client.Models.Account.AccessDeniedModel
@{
    ViewData["Title"] = "Access Denied";
}

<div class="container">
    <div class="row justify-content-center align-items-center min-vh-75">
        <div class="col-md-6 text-center">
            <div class="error-template">
                <div class="mb-4">
                    <i class="fas fa-exclamation-circle text-danger fa-5x"></i>
                </div>
                <h1 class="display-4">Access Denied</h1>
                <div class="error-details mb-4">
                    <p class="lead text-muted">
                        Sorry, you do not have permission to access this resource.
                    </p>
                </div>
                <div class="error-actions">
                    <a asp-page="/Index" class="btn btn-primary btn-lg">
                        <i class="fas fa-home me-2"></i>Go Home
                    </a>
                    <a asp-page="/Account/Login" class="btn btn-outline-primary btn-lg ms-3">
                        <i class="fas fa-sign-in-alt me-2"></i>Login
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>